# Create an OSEv3 group that contains the masters and nodes groups
[OSEv3:children]
masters
etcd
nodes
lb
#glusterfs_registry
#glusterfs

# Set variables common for all OSEv3 hosts
[OSEv3:vars]
# SSH user, this user should allow ssh based auth without requiring a password
ansible_ssh_user=centos

# If ansible_ssh_user is not root, ansible_become must be set to true
ansible_become=true

# Deploy OpenShift origin.
deployment_type=origin
openshift_release=v3.6

# Set to true to use firewalld instead of the default iptables.
os_firewall_use_firewalld=true

# We need a wildcard DNS setup for our public access to services, fortunately
# we can use the superb xip.io to get one for free.
openshift_public_hostname=${aws_lb.ocp-master-ingress-lb.public_dns}
#Used for the routes
openshift_master_default_subdomain=${aws_lb.ocp-infra-ingress-lb.public_dns}

### Cluster Section 
openshift_master_cluster_method=native
openshift_master_cluster_hostname=${aws_lb.ocp-master-ingress-lb.public_dns}
openshift_master_cluster_public_hostname=${aws_lb.ocp-master-ingress-lb.public_dns}

# Use an htpasswd file as the indentity provider.
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/origin/master/htpasswd'}]

# Uncomment the line below to enable metrics for the cluster.
# openshift_hosted_metrics_deploy=true

# Enabling the Audit Logging
openshift_master_audit_config={"enabled": true}

# Configure usage of openshift_clock role.
openshift_clock_enabled=true

# Configure the multi-tenant SDN plugin (default is 'redhat/openshift-ovs-subnet')
os_sdn_network_plugin_name='redhat/openshift-ovs-multitenant'

# Set to true to use firewalld instead of the default iptables.
#os_firewall_use_firewalld=true

[masters]
master1.openshift.local openshift_hostname=master1.openshift.local
master2.openshift.local openshift_hostname=master2.openshift.local
master3.openshift.local openshift_hostname=master3.openshift.local

# host group for etcd
[etcd]
master1.openshift.local
master2.openshift.local
master3.openshift.local

[lb]
lb1.openshift.local openshift_hostname=lb1.openshift.local

# host group for nodes, includes region info
[nodes]
master1.openshift.local openshift_node_labels="{'region': 'master', 'zone': 'default', 'logging-infra-fluentd': 'true'}"
master2.openshift.local openshift_node_labels="{'region': 'master', 'zone': 'default', 'logging-infra-fluentd': 'true'}"
master3.openshift.local openshift_node_labels="{'region': 'master', 'zone': 'default', 'logging-infra-fluentd': 'true'}"
infra1.openshift.local openshift_hostname=infra1.openshift.local openshift_node_labels="{'region': 'infra', 'zone': 'default', 'logging-infra-fluentd': 'true'}"
infra2.openshift.local openshift_hostname=infra2.openshift.local openshift_node_labels="{'region': 'infra', 'zone': 'default', 'logging-infra-fluentd': 'true'}"
logging1.openshift.local openshift_hostname=logging1.openshift.local openshift_node_labels="{'region': 'logging', 'zone': 'logging-es-node-1', 'logging-infra-fluentd': 'true'}"
metric1.openshift.local openshift_hostname=metric1.openshift.local openshift_node_labels="{'region': 'metric', 'zone': 'metric-node-1', 'logging-infra-fluentd': 'true'}"
node1.openshift.local openshift_hostname=node1.openshift.local openshift_hostname=node1.openshift.local openshift_node_labels="{'region': 'primary', 'zone': 'AppSrv1'}"
node2.openshift.local openshift_hostname=node2.openshift.local openshift_hostname=node2.openshift.local openshift_node_labels="{'region': 'primary', 'zone': 'AppSrv2'}"

